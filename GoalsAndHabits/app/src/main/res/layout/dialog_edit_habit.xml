<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editDiaName"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="Habit Name"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editDiaReason"
        android:layout_width="251dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Habit Reason"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDiaName" />

    <EditText
        android:id="@+id/editStartDate"
        android:layout_width="243dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Starting Date"
        android:inputType="text"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDiaName" />

    <TextView
        android:id="@+id/scheduleTextView"
        android:layout_width="94dp"
        android:layout_height="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Remind Me On:"
        app:layout_constraintBottom_toTopOf="@+id/mondayBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <CheckBox
        android:id="@+id/sundayBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="252dp"
        android:text="Sundays"
        app:layout_constraintBottom_toTopOf="@+id/tuesdayBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scheduleTextView" />

    <CheckBox
        android:id="@+id/mondayBox"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="15dp"
        android:text="Mondays"
        app:layout_constraintBottom_toTopOf="@+id/thursdayBox"
        app:layout_constraintEnd_toStartOf="@+id/tuesdayBox"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleTextView" />

    <CheckBox
        android:id="@+id/tuesdayBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="60dp"
        android:text="Tuesdays"
        app:layout_constraintBottom_toTopOf="@+id/fridayBox"
        app:layout_constraintEnd_toStartOf="@+id/wednesdayBox"
        app:layout_constraintStart_toEndOf="@+id/thursdayBox"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <CheckBox
        android:id="@+id/wednesdayBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:text="Wednesdays"
        app:layout_constraintBottom_toTopOf="@+id/saturdayBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tuesdayBox"
        app:layout_constraintTop_toTopOf="@+id/tuesdayBox" />

    <CheckBox
        android:id="@+id/thursdayBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:text="Thursdays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fridayBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mondayBox" />

    <CheckBox
        android:id="@+id/fridayBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="48dp"
        android:text="Fridays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saturdayBox"
        app:layout_constraintTop_toTopOf="@+id/thursdayBox" />

    <CheckBox
        android:id="@+id/saturdayBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Saturdays"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fridayBox" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>